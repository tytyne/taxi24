
{
    "swagger": "2.0",
    "info": {
    "version": "1.0.0", 
    "title": "taxi 24",
    "description": "TAxi24 Project Application API",
    "license": {
    "name": "MIT",
    "url": "https://opensource.org/licenses/MIT"
    }
    },
    "host": "taxi24.herokuapp.com",
    "basePath": "/",
    "tags": [
    {
    "name": "Taxi 24",
    "description": "API for drivers in the system"
    }
    ],
    "schemes": [
    "https"
    ],
    "consumes": [
    "application/json"
    ],
    "produces": [
    "application/json"
    ],

    "paths": {
        "/api/alldrivers": {
        "get": {
        "tags": [
        "driver routers"
        ],
        "summary": "Get a list of all drivers ",
        "responses": {
        "200": {
        "description": "drivers found",
        "schema": {
        "$ref": "#/definitions/Driver"
        }
        }
        }
        }
        },
        "/api/available/drivers": {
            "get": {
            "tags": [
                "driver routers"
            ],
            "summary": "Get a list of all available drivers",
            "responses": {
            "200": {
            "description": "drivers found",
            "schema": {
            "type":"array",
            "$ref": "#/definitions/Driver"
            }
            }
            }
            }
            },

        "/available/range/drivers": {
            "get": {
            "tags": [
            "driver routers"
            ],
            "summary": "Get a list of all available drivers within 3km for a specific location",
            "parameters": [
                {
                "name": "Latitude ",
                "in": "path",
                "required": true,
                "description": "Latitude of a specific location",
                "type": "number"
                },
                {
                    "name": "Longitude",
                    "in": "path",
                    "required": true,
                    "description": "Longitude of a specific location",
                    "type": "number"
                    }
                ],
            "responses": {
            "200": {
            "description": "drivers found",
            "schema": {
            "$ref": "#/definitions/Driver"
            }
            }
            }
            }
            },

        "/api/driver/{id}": {
            "get": {
            "tags": [
                "driver routers"
            ],
            "summary": "Get a specific driver by ID",
            "parameters": [
                {
                "name": "id",
                "in": "path",
                "required": true,
                "description": "ID for the Driver",
                "type": "integer"
                }
                ],

            "responses": {
            "200": {
            "description": "Driver with that ID",
            "schema": {
            "$ref": "#/definitions/Driver"
            }
            }
            }
            }
            },

            "/api/trip": {
                "post": {
                "tags": [
                    "trip routers"
                ],
                "summary": "Create a new Trip  request by assigning a driver to a rider",
                "parameters": [
                    {
                    "name": "driverId",
                    "in": "path",
                    "required": true,
                    "description": "Id of a driver who is going to drive a rider",
                    "type": "integer"
                    },
                    {
                        "name": "riderId",
                        "in": "path",
                        "required": true,
                        "description": "Id of a rider who enjoy the ride",
                        "type": "integer"
                        }
                    ],
    
                "responses": {
                "200": {
                "description": "a trip made",
                "schema": {
                "$ref": "#/definitions/Trip"
                }
                }
                }
                }
                },


        "/complete/trip/{id}": {
            "get": {
            "tags": [
                "trip routers"
            ],
            "summary": "Complete a trip",
            "parameters": [
                {
                "name": "id",
                "in": "path",
                "required": true,
                "description": "ID for the trip",
                "type": "integer"
                }
                ],

            "responses": {
            "200": {
            "description": "Complete a trip",
            "schema": {
            "$ref": "#/definitions/Trip"
            }
            }
            }
            }
            },


           
            "/api/active/trips": {
                "get": {
                "tags": [
                "trip routers"
                ],
                "summary": "Get a list of all active Trips",
                "responses": {
                "200": {
                "description": "trips found",
                "schema": {
                "$ref": "#/definitions/Trip"
                }
                }
                }
                }
                },


                "/api/allriders": {
                    "get": {
                    "tags": [
                    "rider routers"
                    ],
                    "summary": "Get a list of all riders ",
                    "responses": {
                    "200": {
                    "description": "riders found",
                    "schema": {
                    "$ref": "#/definitions/Rider"
                    }
                    }
                    }
                    }
                    },

            "/api/rider/{id}": {
                "get": {
                "tags": [
                    "rider routers"
                ],
                "summary": "return a rider with a specific ID",
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of rider that we want to find",
                    "type": "integer"
                    }
                    ],
    
                "responses": {
                "200": {
                "description": "a rider with that ID",
                "schema": {
                "$ref": "#/definitions/Rider"
                }
                }
                }
                }
                },
                "/api/closer/rider/:id": {
                    "get": {
                    "tags": [
                    "rider routers"
                    ],
                    "summary": "For a specific rider, get a list of the 3 closest drivers",

                    "parameters": [
                        {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID of rider that wants close drivers",
                        "type": "integer"
                        }
                        ],


                    "responses": {
                    "200": {
                    "description": "riders found",
                    "schema": {
                    "$ref": "#/definitions/Rider"
                    }
                    }
                    }
                    }
                    }
               
        },
        "definitions": {
       
            "Driver": {
            "properties": {
        
            "firstname": {
            "type": "string",
            "required":true
            },
            "lastname": {
            "type": "string",
            "required":true
            },
            "email": {
            "type": "string",
            "required":true
            },
            "status":{
            "type":"string",
            "enum":[
                "available","unavailable"
            ],
            "default":"available",
            "required":true
            },
            "phone":{
            "type":"string",
            "required":true
            },
            "latitude":{
            "type":"integer",
            "required":true
            },
            "longitude":{
            "type":"integer",
            "required":true
            }
        }

        
        },

        "Rider":{
            "properties":{
    
                "name": {
                "type": "string",
                "required":true
                },
                "phone": {
                "type": "string",
                "required":true
                },

                "latitude":{
                "type":"integer",
                "required":true
                },
                "longitude":{
                "type":"integer",
                "required":true
                }
                }

        } ,


        "Trip":{
            "properties":{

                   
                    "driverId": {
                    "type": "number",
                    "required":true
                    },
                    "riderId": {
                    "type": "number",
                    "required":true
                    },
                    "status":{
                        "type":"string",
                        "enum":["active","complete","cancelled"],
                        "default":"active"
                    }


            }

        } 

    }  
    


}
